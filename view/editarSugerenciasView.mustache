                    <input type="hidden" name="correcta" value="{{es_correcta}}">
                    <input type="hidden" name="descripcionRespuesta" value="{{descripcion}}">
                    {{/respuestas}}
                </li>
            </ul>
        </form>
        {{/sugeridas}}
