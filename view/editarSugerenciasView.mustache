        {{#sugeridas}}
        <form action="/Perfil/actualizarSugerida" method="post">
            <input type="hidden" name="id" value="{{numeroPregunta}}">
            <input type="hidden" name="descripcion" value="{{descripcionPregunta}}">
            <input type="hidden" name="categoria" value="{{categoria}}">
            <input type="hidden" name="dificultad" value="{{dificultad}}">
            <span>{{descripcionPregunta}}</span>
            <input type="submit" class="delete" name="accion" value="Eliminar">
            <input type="submit" class="add" name="accion" value="Aprobar">
            <ul>
                <li>
                    {{#respuestas}}
