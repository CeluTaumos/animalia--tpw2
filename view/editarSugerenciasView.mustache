
<div class="caja fila">
    
    <div class="tabla">
        <h1 class="centrado nombre">Últimas preguntas sugeridas</h1>
        <form action="/Perfil/eliminarPreguntaReportada" method="post">
            <input type="hidden" name="id" value="{{numeroPregunta}}">
            <span>{{descripcionPregunta}}</span> <button class="delete">Eliminar</button><button class="add">Aprobar</button>
        </form>
        
        <ul>
            {{#descripcionRespuesta}}
               <li>{{.}}</li>
            {{/descripcionRespuesta}}
         </ul>
    </div>
    
    
    <div class="tabla">
        <h1 class="centrado nombre">Últimas preguntas reportadas</h1>
        {{#reportadas}}
        <form action="/Perfil/eliminarPreguntaReportada" method="post">
            <span>{{descripcion_reporte}}</span> 
            <input type="hidden" name="id" value="{{pregunta_id}}">
            <input type="submit" value="Eliminar" class="delete"><br>
            
        </form>
        {{/reportadas}}
    </div>
    
</div>