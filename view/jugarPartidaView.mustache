<div class=" partida">
    
    {{#pregunta}}
    <div class="cardPartida {{tipo}}">
        <p id="mensaje"></p> 
        <div class="caja">
            <h1>{{tipo}}</h1>
            <h2>⏳ Tiempo: <span id="tiempoRestante">60</span></h2>
            <div id="barraTiempo"></div>
            <img src="{{imagen}}" width="200" height="150" alt="gift">
            <h1>{{descripcion}}</h1>
        </div>

        <div>
            <form action="/Partida/verificarRespuesta" method="post" class="caja">
                {{#respuesta}}
                <button type="submit" name="id" value="{{id}}"
                    class="boton_respuesta shadow-drop-center">{{descripcion}}</button>
                {{/respuesta}}
            </form>
            <div class="botonera">
                <button class="trampita"> 💣 </button>
                <button class="trampita"> 💫 </button>
                <button class="trampita"> 🃏 </button>
            </div>
        </div>

        <form action="/Partida/reportarPregunta" method="post" id="reportarForm">
            <!-- Tengo que poner el name como quiera  el post y el value como estaria llamado en mustache -->
            <input type="hidden" value="{{id2}}" name="{{id2}}">
            <input class="boton-sec centro" type="submit" name="enviar" value="Reportar Pregunta" id="reportarBtn">
        </form>
        {{/pregunta}}
        <!-- <button class="boton-sec centro">Reportar Pregunta</button> -->

    </div>

    <script src="../public/barratiempo.js"></script>

    <script src="../public/reporte.js"></script>

</div>