<div class="columnas">
    <div class="formulario">
        <div class="agregarPregunta">
            <h1>Sugerir pregunta</h1>
            <form action="/Perfil/sugerirPregunta" method="post">
                <input class="sugerencia" type="text" placeholder="Ingrese su pregunta" name="pregunta">
                <select class="opcion" name="categoria">
                    <legend>Seleccione la categoria</legend>
                    <option value="1">Historia</option>
                    <option value="2">Cultura</option>
                    <option value="3">Deporte</option>
                    <option value="4">Geografia</option>
                    <option value="5">Ciencia</option>
                </select>
                <input class="sugerencia" type="text" placeholder="Ingrese una respuesta (Correcta)" name="respuesta1">
                <input type="hidden" name="correcta" value="1">
                <input class="sugerencia" type="text" placeholder="Ingrese una respuesta" name="respuesta2">
                <input class="sugerencia" type="text" placeholder="Ingrese una respuesta" name="respuesta3">
                <input class="sugerencia" type="text" placeholder="Ingrese una respuesta" name="respuesta4">
                <div>
                    <input class="boton-sec" type="submit" value="Confirmar" name="send">
                </div>
            </form>
        </div>

    </div>
    <div class="formulario">
        <h1>Sugerir categoria</h1>
        <form action="/Perfil/sugerirCategoria" method="post">
            <input class="sugerencia" type="text" placeholder="Ingrese una categoria" name="categoria">
            <input class="boton-sec" type="submit" value="Confirmar" name="enviar">
        </form>
    </div>
</div>